---
import Layout from "../layouts/Layout.astro";
import RegisterForm from "../components/RegisterForm";

// Middleware handles redirecting logged-in users, so we don't need to check here
// If user is logged in, middleware will redirect to dashboard
// If user is not logged in, they can see the registration page
---

<Layout title="Rejestracja - DoFIRE">
  <main class="flex min-h-screen items-center justify-center bg-background px-4 py-12" role="main">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight text-foreground">DoFIRE</h1>
        <p class="mt-2 text-sm text-muted-foreground">Utwórz nowe konto</p>
      </div>
      <div class="rounded-lg border border-border bg-card p-6 shadow-sm">
        <RegisterForm client:load />
      </div>
      <div class="text-center text-sm">
        <a href="/login" class="text-primary hover:underline">Masz już konto? Zaloguj się</a>
      </div>
    </div>
  </main>
</Layout>
